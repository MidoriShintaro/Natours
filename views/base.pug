html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Natours | Exciting tours for adventurous people
        link(rel="stylesheet" href="css/style.css")
        link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato:300,300i,700")
        link(rel="shortcut icon" href="/img/favicon.png" type="image/png")
    body 
        // HEADERS
        header.header
            nav.nav.nav--tours
                a.nav__el(href='/overview.html') All tours
                form.nav__search
                    button.nav__search-btn
                        svg
                            use(xlink:href='img/icons.svg#icon-search')
                    input.nav__search-input(type='text' placeholder='Search tours')
            .header__logo
                img(src='img/logo-white.png' alt='Natours logo')
            nav.nav.nav--user
                //- a.nav__el(href='#') My bookings
                //- button.nav__el Log out
                //- a.nav__el(href='#')
                //-     img.nav__user-img(src='img/user.jpg' alt='User photo')
                //-     span Jonas
                <button class="nav__el">Log in</button>
                <button class="nav__el nav__el--cta">Sign up</button>

        //CONTENT
        section.section-header
            h1= tour 

        //FOOTER
        .footer
            .footer__logo
                img(src='img/logo-green.png' alt='Natours logo')
            ul.footer__nav
                li: a(href='#') About us
                li: a(href='#') Download apps
                li: a(href='#') Become a guide
                li: a(href='#') Careers
                li: a(href='#') Contact
